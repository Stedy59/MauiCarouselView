<?xml version="1.0" encoding="utf-8" ?>
<ContentView
	x:Class="StedySoft.CarouselView.Views.ItemViews.ItemView1"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:colors="clr-namespace:StedySoft.Maui.Framework"
	BackgroundColor="{colors:Color BackgroundColor}">

	<ContentView.Content>
		<Border
			Style="{DynamicResource FrameStyle}">
			<Border
				Style="{DynamicResource ControlStyle}"
				Margin="10">
				<Label
					HorizontalTextAlignment="Center"
					Text="Content for Item #1"/>
			</Border>
		</Border>
	</ContentView.Content>

</ContentView>